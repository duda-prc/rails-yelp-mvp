<div class="container">
  <h1>New Review</h1>

  <%= simple_form_for [ @restaurant, @review ] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: 1..5 %>
    <%= f.submit %>
  <% end %>

  <%= link_to 'Back', restaurant_path(@restaurant), class:'btn btn-primary mt-4' %>
</div>
