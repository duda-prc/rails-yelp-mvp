<!DOCTYPE html>
<html>
  <head>
    <title>RailsYelpMvp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar sticky-top bg-light">
      <div class="d-flex justify-content-start align-items-center nav-yelps">
        <div class="navbar-brand nav-icon">
          <i class="fa-solid fa-utensils"></i>
        </div>
        <%= link_to 'Home', restaurants_path, class:'btn btn-outline-dark mx-2' %>
        <%= link_to 'New', new_restaurant_path, class:'btn btn-outline-success mx-2 btn-sm' %>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
